<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.udistrital.presentacion.usuario.CreditosActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Creditos"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/tamañoLetraTitulo"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_light"
                    />



                <TextView
                    android:id="@+id/preguta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APP TELOENSEÑA"
                    android:textSize="21sp"
                    android:padding="16sp"
                    android:gravity="center"
                    android:textColor="@color/category_colors"
                    />
                <TextView
                    android:id="@+id/prespuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2018. Licencia  Creative Commons "
                    android:textSize="17sp"
                    android:padding="16sp"
                    android:paddingBottom="2sp"

                    />


                <TextView
                    android:id="@+id/prespuesta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modelos 3D Blend Swap"
                    android:textSize="17sp"
                    android:paddingTop="2sp"
                    android:padding="16sp"

                    />

                <TextView
                    android:id="@+id/manual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descarga Manuales"
                    android:textSize="17sp"
                    android:padding="16sp"
                    android:textColor="@color/category_colors"
                    />

                <TextView
                    android:id="@+id/marcadores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descarga Marcadores"
                    android:textSize="17sp"
                    android:padding="16sp"
                    android:textColor="@color/category_colors"
                    />
                <TextView
                    android:id="@+id/prespuesta5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="teloensenapp@gmail.com"
                    android:textSize="17sp"
                    android:padding="16sp"
                    android:gravity="center_horizontal"

                    />





            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="top"
                android:background="@drawable/sombra" />

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                android:visibility="visible"
                design:menu="@menu/menu_navigation" />
        </FrameLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

